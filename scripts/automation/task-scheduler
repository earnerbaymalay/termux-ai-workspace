#!/data/data/com.termux/files/usr/bin/bash
# Simple task scheduler - run via Termux:Boot or manually

HOUR=$(date "+%H")
DAY=$(date "+%u")  # 1=Monday, 7=Sunday

# Morning routine (8 AM)
if [ "$HOUR" = "08" ]; then
  ~/.shortcuts/morning-routine
fi

# Daily cleanup (10 PM)
if [ "$HOUR" = "22" ]; then
  ~/.shortcuts/daily-cleanup
fi

# Weekly maintenance (Sunday 9 AM)
if [ "$DAY" = "7" ] && [ "$HOUR" = "09" ]; then
  ~/.shortcuts/weekly-maintenance
fi

echo "Scheduler ran at $(date)"


#!/data/data/com.termux/files/usr/bin/bash
BACKUP_DIR=~/ai/outputs/backups/$(date "+%Y-%m-%d-%H%M")
mkdir -p "$BACKUP_DIR"

# Backup critical files
cp -r ~/ai/scripts "$BACKUP_DIR/"
cp -r ~/.shortcuts "$BACKUP_DIR/"
cp -r ~/vault/System-Rules "$BACKUP_DIR/"
cp ~/.bashrc "$BACKUP_DIR/"

tar -czf "$BACKUP_DIR.tar.gz" -C ~/ai/outputs/backups $(basename "$BACKUP_DIR")
rm -rf "$BACKUP_DIR"

echo "Backup created: $BACKUP_DIR.tar.gz"
termux-toast "Backup complete"

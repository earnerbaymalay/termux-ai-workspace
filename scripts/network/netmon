#!/bin/bash
echo "Network monitoring:"
echo "Active connections:"
ss -tuln 2>/dev/null | head -10 || netstat -tuln 2>/dev/null | head -10

echo ""
echo "Network interfaces:"
ip addr show 2>/dev/null || echo "Unable to show interfaces (requires root or special permissions)"

echo ""
echo "Network statistics:"
netstat -i 2>/dev/null | head -10 || echo "Unable to show network stats"
#!/data/data/com.termux/files/usr/bin/bash
# Battery Benchmark Script

echo "Starting battery benchmark..."

# Get starting battery percentage
START_BATTERY=$(termux-battery-status | jq -r '.percentage')
echo "Starting battery: $START_BATTERY%"

# Run 5 AI queries via qwen-chat
for i in {1..5}; do
    echo "Running AI query $i/5..."
    echo "Summarize the impact of renewable energy." | ~/bin/qwen-chat >/dev/null 2>&1
    sleep 2
done

# Get ending battery percentage
END_BATTERY=$(termux-battery-status | jq -r '.percentage')
echo "Ending battery: $END_BATTERY%"

# Calculate drain
DRAIN=$(echo "$START_BATTERY - $END_BATTERY" | bc -l)
echo "Battery drain: $DRAIN%"

echo "Battery benchmark complete."
